<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="org.pondar.pacmankotlin.MainActivity" >



    <TextView
        android:id="@+id/pointsView"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/points" />




    <!-- Notice how the custom view is referenced here with
    a full package path-->
    <org.pondar.pacmankotlin.GameView
        android:id="@+id/gameView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">



    </org.pondar.pacmankotlin.GameView>

    <!-- Button layout -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_weight="2">



        <Button
            android:id="@+id/moveLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Move Left" />
        <Button
            android:id="@+id/moveUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Move Up" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Move Down"
            android:id="@+id/moveDown"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Move Right"
            android:id="@+id/moveRight"/>


    </LinearLayout>
</LinearLayout>
